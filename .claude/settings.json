  "model": "opus",
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff && osascript -e 'display notification \"Task Complete\" with title \"Claude Code\"'"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "permission_prompt|idle_prompt|elicitation_dialog",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Hero.aiff && osascript -e 'display notification \"Claude needs attention\" with title \"Action Required\"'"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "\"$HOME/.claude/hooks/format-elixir.sh\""
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "input=$(cat); cwd=$(echo \"$input\" | jq -r '.workspace.current_dir // .cwd'); display_dir=\"${cwd/#$HOME/~}\"; model=$(echo \"$input\" | jq -r '.model.id'); short_model=$(echo \"$model\" | sed -E 's/^claude-//; s/-[0-9]{8}$//; s/-([0-9])-([0-9])/-\\1.\\2/'); model_info=$(printf ' \\033[34m[%s]\\033[0m' \"$short_model\"); git_info=\"\"; if git -C \"$cwd\" rev-parse --git-dir > /dev/null 2>&1; then branch=$(git -C \"$cwd\" rev-parse --abbrev-ref HEAD 2>/dev/null); if [[ -n $(git -C \"$cwd\" -c core.fileMode=false status --porcelain --no-optional-locks 2>/dev/null) ]]; then git_info=$(printf ' \\033[33m(%s *)\\033[0m' \"$branch\"); else git_info=$(printf ' \\033[32m(%s)\\033[0m' \"$branch\"); fi; fi; usage=$(echo \"$input\" | jq '.context_window.current_usage'); context_info=\"\"; if [ \"$usage\" != \"null\" ]; then current=$(echo \"$usage\" | jq '.input_tokens + .cache_creation_input_tokens + .cache_read_input_tokens'); size=$(echo \"$input\" | jq '.context_window.context_window_size'); if [ \"$size\" -gt 0 ]; then pct=$((current * 100 / size)); context_info=$(printf ' \\033[36m[%d%%]\\033[0m' \"$pct\"); fi; fi; printf '%s%s%s%s' \"$display_dir\" \"$model_info\" \"$git_info\" \"$context_info\""
  },
  "enabledPlugins": {
    "ralph-wiggum@claude-plugins-official": true,
    "code-review@claude-plugins-official": true,
    "code-simplifier@claude-plugins-official": true
  }
