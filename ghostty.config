# ═══════════════════════════════════════════════════════════════════════════════
# Ghostty Terminal Configuration
# ═══════════════════════════════════════════════════════════════════════════════

# ── Font Settings ──────────────────────────────────────────────────────────────
font-family                    = FiraCode Nerd Font
font-family-bold               = FiraCode Nerd Font Bold
font-family-italic             = FiraCode Nerd Font Italic
font-family-bold-italic        = FiraCode Nerd Font Bold Italic
# font-style                     = Regular
font-size                      = 15.5
font-synthetic-style           = no-bold,no-italic
font-thicken                   = true
window-inherit-font-size       = true

# Font Mapping & Unicode
font-codepoint-map            = U+E0A0-U+E0A3=Powerline Extra Symbols
grapheme-width-method         = unicode

# Font Features
font-feature                   = calt
font-feature                   = liga
font-feature                   = ss13

# ── Appearance & Theme ──────────────────────────────────────────────────────────
theme                          = catppuccin-mocha
background-opacity             = 0.80
background-blur                = true
background-blur-radius         = 20
selection-background           = 44475a
window-colorspace              = display-p3
alpha-blending                 = linear-corrected
bold-is-bright                 = true
adjust-underline-position      = 3

# ── Cursor Settings ─────────────────────────────────────────────────────────────
cursor-style                   = block
cursor-style-blink             = false
cursor-invert-fg-bg            = true
cursor-opacity                 = 0.8
adjust-cursor-thickness        = 1

# ── Window Settings ─────────────────────────────────────────────────────────────
window-width                   = 90
window-height                  = 25
window-decoration              = true
window-padding-x               = 2
window-padding-y               = 2
window-padding-balance         = true
window-save-state              = always
window-vsync                   = true
window-inherit-working-directory = true

# Window Title & Metadata
title                          = Terminal
window-subtitle                = working-directory
title-report                   = false

# ── Shell Integration ───────────────────────────────────────────────────────────
shell-integration              = zsh
shell-integration-features     = no-cursor

# ── Clipboard & Selection ───────────────────────────────────────────────────────
copy-on-select                 = clipboard
clipboard-paste-protection     = true
clipboard-trim-trailing-spaces = true

# ── Mouse & Interaction ─────────────────────────────────────────────────────────
mouse-hide-while-typing        = true
mouse-shift-capture            = false
mouse-scroll-multiplier        = 3
focus-follows-mouse            = true
link-url                       = true

# ── macOS Specific ──────────────────────────────────────────────────────────────
macos-titlebar-style           = hidden
macos-option-as-alt            = true
macos-auto-secure-input        = true
macos-secure-input-indication  = true

# ── Resource Limits ─────────────────────────────────────────────────────────────
scrollback-limit               = 1000000
image-storage-limit            = 268435456
linux-cgroup-memory-limit     = 1073741824
linux-cgroup-processes-limit  = 2048

# ── Application Behavior ────────────────────────────────────────────────────────
confirm-close-surface          = false

# ── Auto Update ─────────────────────────────────────────────────────────────────
auto-update                    = download
auto-update-channel            = stable

# ── Keybindings ─────────────────────────────────────────────────────────────────
keybind                        = global:super+grave_accent=toggle_quick_terminal

