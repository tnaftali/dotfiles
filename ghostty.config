# ═══════════════════════════════════════════════════════════════════════════════
# Ghostty Terminal Configuration
# ═══════════════════════════════════════════════════════════════════════════════

# ── Font Settings ──────────────────────────────────────────────────────────────
font-family              = FiraCode Nerd Font
font-family-bold         = FiraCode Nerd Font Bold
font-family-italic       = FiraCode Nerd Font Italic
font-family-bold-italic  = FiraCode Nerd Font Bold Italic
font-size                = 15.5
font-thicken             = true
font-synthetic-style     = no-bold,no-italic

# Font Rendering & Unicode
font-feature             = calt
font-feature             = liga
font-feature             = ss13
font-codepoint-map       = U+E0A0-U+E0A3=Powerline Extra Symbols
grapheme-width-method    = unicode

# ── Theme & Appearance ─────────────────────────────────────────────────────────
theme                    = /Applications/Ghostty.app/Contents/Resources/ghostty/themes/Catppuccin Mocha
background-opacity       = 0.80
background-blur          = true
background-blur-radius   = 20
selection-background     = 44475a
window-colorspace        = display-p3
alpha-blending           = linear-corrected
bold-is-bright           = true

# ── Window & Tabs ──────────────────────────────────────────────────────────────
window-width             = 90
window-height            = 25
window-padding-x         = 2
window-padding-y         = 2
window-padding-balance   = true
window-decoration        = true
window-vsync             = true
window-save-state        = always
window-inherit-font-size = true
window-inherit-working-directory = true

# Tab Bar & Titles
macos-titlebar-style     = transparent
macos-icon-ghost-color   = #f5e0dc
title-report             = true
title = ""
window-subtitle          = working-directory
# title                  = Terminal  # (Commented out to allow dynamic titles)

# ── Cursor ─────────────────────────────────────────────────────────────────────
cursor-style             = block
cursor-style-blink       = false
cursor-invert-fg-bg      = true
cursor-opacity           = 0.8
adjust-cursor-thickness  = 1
adjust-underline-position = 3

# ── Interaction ────────────────────────────────────────────────────────────────
mouse-hide-while-typing  = true
mouse-shift-capture      = false
mouse-scroll-multiplier  = 3
focus-follows-mouse      = true
link-url                 = true

# Clipboard
copy-on-select           = clipboard
clipboard-paste-protection = true
clipboard-trim-trailing-spaces = true

# ── Shell & Updates ────────────────────────────────────────────────────────────
shell-integration        = zsh
shell-integration-features = no-cursor,no-title
auto-update              = download
auto-update-channel      = stable
confirm-close-surface    = false

# ── macOS Specific ──────────────────────────────────────────────────────────────
macos-option-as-alt      = true
macos-auto-secure-input  = true
macos-secure-input-indication = true

# ── Quick Terminal ──────────────────────────────────────────────────────────────
quick-terminal-position  = top
quick-terminal-size      = 100%,100%

# ── Resource Limits ─────────────────────────────────────────────────────────────
scrollback-limit         = 100000000
image-storage-limit      = 268435456
linux-cgroup-memory-limit = 1073741824
linux-cgroup-processes-limit = 2048

# ── Notifications ──────────────────────────────────────────────────────────────
desktop-notifications    = true

# ── Splits & Panes ─────────────────────────────────────────────────────────────
# Creation
keybind = ctrl+v=new_split:right
keybind = ctrl+s=new_split:down

# Navigation (Vim-style)
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right

# Resizing
keybind = ctrl+shift+h=resize_split:left,50
keybind = ctrl+shift+j=resize_split:down,50
keybind = ctrl+shift+k=resize_split:up,50
keybind = ctrl+shift+l=resize_split:right,50

# Management
keybind = ctrl+shift+z=toggle_split_zoom
keybind = ctrl+shift+e=equalize_splits
keybind = shift+enter=text:\x1b\r
