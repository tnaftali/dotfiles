{
  // ===================================
  // I. EDITOR CORE SETTINGS
  // ===================================
  // --- Font & Appearance ---
  "editor.fontSize": 15,
  "editor.fontFamily": "FiraCode Nerd Font",
  "editor.fontWeight": "500",
  "editor.fontLigatures": true,
  "editor.codeLensFontFamily": "FiraCode Nerd Font",
  "editor.minimap.enabled": false,
  "editor.accessibilitySupport": "off",
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "entity",
          "keyword",
          "markup",
          "meta",
          "punctuation",
          "storage",
          "string",
          "support",
          "variable",
          "storage.type.ts",
          "keyword.control.flow.ts"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  // --- Indentation & Formatting ---
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.wordWrap": "off",
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": false,
  "editor.formatOnSave": true,
  // --- Cursor & Scrolling ---
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.renderLineHighlight": "line",
  "editor.smoothScrolling": true,
  "workbench.list.smoothScrolling": true,
  // --- Hints & Assistance ---
  "editor.lineNumbers": "on",
  "editor.parameterHints.enabled": true,
  "editor.multiCursorLimit": 100000,
  // ===================================
  // II. FILE & WORKSPACE SETTINGS
  // ===================================
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.associations": {
    "*.leex": "phoenix-heex",
    "*.heex": "phoenix-heex"
  },
  "files.exclude": {
    ".elixir_ls": true,
    "*.pem": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "elm-stuff": true,
    "node_modules": true
  },
  "search.followSymlinks": false,
  // ===================================
  // III. UI & WINDOW SETTINGS
  // ===================================
  "window.zoomLevel": 0,
  "window.titleBarStyle": "custom",
  "workbench.iconTheme": "file-icons",
  "breadcrumbs.enabled": true,
  // ===================================
  // IV. GIT SETTINGS
  // ===================================
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  // "git.blame.editorDecoration.enabled": false,
  // "git.blame.statusBarItem.enabled": false,
  // ===================================
  // V. INTEGRATED TERMINAL (Ghostty Look)
  // ===================================
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontFamily": "FiraCode Nerd Font, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontWeight": "500",
  "terminal.integrated.lineHeight": 1,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.gpuAcceleration": "on",
  "workbench.panel.defaultLocation": "bottom",
  "terminal.external.osxExec": "Ghostty.app",
  // ===================================
  // VI. CURSOR AI & DIFF SETTINGS
  // ===================================
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  // ===================================
  // VII. LANGUAGE & EXTENSION SPECIFIC
  // ===================================
  "elixirLS.suggestSpecs": false,
  "[phoenix-heex]": {
    "editor.defaultFormatter": "JakeBecker.elixir-ls",
    "editor.foldingStrategy": "indentation"
  },
  "emmet.includeLanguages": {
    "HTML (Eex)": "html, heex",
    "elixir": "html",
    "phoenix-heex": "html",
    "html-eex": "html",
    "javascript": "javascriptreact",
    "vue-html": "html",
    "razor": "html",
    "plaintext": "pug"
  },
  "vim.useSystemClipboard": true,
  "vim.foldfix": true,
  "vim.commandLineModeKeyBindings": [],
  "vim.normalModeKeyBindings": [
    {
      "before": [
        ":"
      ],
      "commands": [
        "vim.showQuickpickCmdLine"
      ],
      "silent": true
    }
  ],
  "diffEditor.maxComputationTime": 0,
  "diffEditor.ignoreTrimWhitespace": false,
  // ===================================
  // IX. LIFE-CHANGING WORKFLOW & CLUTTER REDUCTION
  // ===================================
  // --- 1. Minimalist Window Management & Focus ---
  "workbench.editor.limit.enabled": true,
  "workbench.editor.labelFormat": "short",
  "explorer.compactFolders": false, // False creates better visual separation
  // --- 2. Intelligent Auto-Completion & Editing ---
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "editor.linkedEditing": true, // Automatically updates paired tags (e.g., HTML)
  "editor.autoSurround": "languageDefined", // Highlight text and surround it with quotes/brackets
  // --- 3. Debugging and Problems View (First Option) ---
  "problems.autoReveal": false,
  "workbench.colorTheme": "Catppuccin Mocha" // Prevents Problems panel from stealing focus
}
