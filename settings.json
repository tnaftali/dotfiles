{
  "editor.fontSize": 15,
  "editor.fontFamily": "FiraCode Nerd Font",
  "editor.fontWeight": "500",
  "editor.fontLigatures": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.lineNumbers": "on",
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "smooth",
  "editor.wordWrap": "off",
  "editor.renderWhitespace": "all",
  "editor.detectIndentation": false,
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.exclude": {
    ".elixir_ls": true,
    "*.pem": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "elm-stuff": true,
    "node_modules": true
  },
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "terminal.integrated.fontSize": 15,
  "terminal.integrated.fontFamily": "FiraCode Nerd Font, Monaco, 'Courier New', monospace",
  "window.zoomLevel": 0,
  "window.titleBarStyle": "custom",
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": false,
  "editor.renderLineHighlight": "line",
  "editor.smoothScrolling": true,
  "terminal.integrated.scrollback": 10000,
  "search.followSymlinks": false,
  "breadcrumbs.enabled": true,
  "editor.parameterHints.enabled": true,
  "editor.formatOnSave": true,
  "vim.useSystemClipboard": true,
  "editor.accessibilitySupport": "off",
  "vim.commandLineModeKeyBindings": [],
  "workbench.iconTheme": "file-icons",
  "cursor.cmdk.useThemedDiffBackground": true,
  "editor.codeLensFontFamily": "FiraCode Nerd Font",
  "chat.editor.fontSize": 15,
  "chat.editor.fontFamily": "FiraCode Nerd Font",
  "chat.editor.fontWeight": "500",
  "elixirLS.suggestSpecs": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          "comment",
          "comment.block",
          "comment.block.documentation",
          "comment.line",
          "constant",
          "constant.character",
          "constant.character.escape",
          "constant.numeric",
          "constant.numeric.integer",
          "constant.numeric.float",
          "constant.numeric.hex",
          "constant.numeric.octal",
          "constant.other",
          "constant.regexp",
          "constant.rgb-value",
          "emphasis",
          "entity",
          "entity.name",
          "entity.name.class",
          "entity.name.function",
          "entity.name.method",
          "entity.name.section",
          "entity.name.selector",
          "entity.name.tag",
          "entity.name.type",
          "entity.other",
          "entity.other.attribute-name",
          "entity.other.inherited-class",
          "invalid",
          "invalid.deprecated",
          "invalid.illegal",
          "keyword",
          "keyword.control",
          "keyword.operator",
          "keyword.operator.new",
          "keyword.operator.assignment",
          "keyword.operator.arithmetic",
          "keyword.operator.logical",
          "keyword.other",
          "markup",
          "markup.bold",
          "markup.changed",
          "markup.deleted",
          "markup.heading",
          "markup.inline.raw",
          "markup.inserted",
          "markup.italic",
          "markup.list",
          "markup.list.numbered",
          "markup.list.unnumbered",
          "markup.other",
          "markup.quote",
          "markup.raw",
          "markup.underline",
          "markup.underline.link",
          "meta",
          "meta.block",
          "meta.cast",
          "meta.class",
          "meta.function",
          "meta.function-call",
          "meta.preprocessor",
          "meta.return-type",
          "meta.selector",
          "meta.tag",
          "meta.type.annotation",
          "meta.type",
          "punctuation.definition.string.begin",
          "punctuation.definition.string.end",
          "punctuation.separator",
          "punctuation.separator.continuation",
          "punctuation.terminator",
          "storage",
          "storage.modifier",
          "storage.type",
          "string",
          "string.interpolated",
          "string.other",
          "string.quoted",
          "string.quoted.double",
          "string.quoted.other",
          "string.quoted.single",
          "string.quoted.triple",
          "string.regexp",
          "string.unquoted",
          "strong",
          "support",
          "support.class",
          "support.constant",
          "support.function",
          "support.other",
          "support.type",
          "support.type.property-name",
          "support.variable",
          "variable",
          "variable.language",
          "variable.name",
          "variable.other",
          "variable.other.readwrite",
          "variable.parameter",
          "storage.type.ts",
          "keyword.control.flow.ts"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "workbench.colorTheme": "Catppuccin Mocha",
  "terminal.integrated.fontWeight": "500",
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.list.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "vim.foldfix": true,
  "[phoenix-heex]": {
    "editor.defaultFormatter": "JakeBecker.elixir-ls",
    "editor.foldingStrategy": "indentation"
  },
  "files.associations": {
    "*.leex": "phoenix-heex",
    "*.heex": "phoenix-heex"
  },
  "emmet.includeLanguages": {
    "HTML (Eex)": "html, heex",
    "elixir": "html",
    "phoenix-heex": "html",
    "html-eex": "html",
    "javascript": "javascriptreact",
    "vue-html": "html",
    "razor": "html",
    "plaintext": "pug"
  },
  "diffEditor.maxComputationTime": 0,
  "editor.multiCursorLimit": 100000,
  "diffEditor.ignoreTrimWhitespace": false,
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "cursor.composer.textSizeScale": 1.15,
  "terminal.integrated.gpuAcceleration": "off",
  "vim.normalModeKeyBindings": [
    {
      "before": [
        ":"
      ],
      "commands": [
        "vim.showQuickpickCmdLine",
      ],
      "silent": true
    }
  ],
}
